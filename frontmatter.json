{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.framework.id": "astro",
  "frontMatter.preview.host": "http://localhost:4321",
  "frontMatter.content.publicFolder": "public",
  "frontMatter.content.defaultFileType": "mdx",
  "frontMatter.content.supportedFileTypes": ["md", "mdx"],
  "frontMatter.content.draftField": "draft",
  "frontMatter.dashboard.content.card.fields.state": true,
  "frontMatter.content.pageFolders": [
    {
      "title": "news",
      "path": "[[workspace]]/src/content/news",
      "filePrefix": null
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "news",
      "filePrefix": null,
      "pageBundle": false,
      "fileType": "mdx",
      "template": "[[workspace]]/.frontmatter/templates/news.mdx",
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "FullTitle",
          "name": "fulltitle",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Draft",
          "name": "draft",
          "type": "boolean",
          "default": false
        },
        {
          "title": "id",
          "name": "id",
          "type": "number"
        },
        {
          "title": "excerpt",
          "name": "excerpt",
          "type": "string"
        },
        {
          "title": "lead",
          "name": "lead",
          "type": "string"
        },
        {
          "title": "image",
          "name": "image",
          "type": "image"
        }
      ]
    }
  ]
}
